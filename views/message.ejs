          <form id="chat-form" action="">
            <input
              type="text"
              required
              id="text"
              name="message"
              placeholder="Message..."
            />
            <button>Send</button>
          </form>
        </div>
      </div> 
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"
      integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <script>
      var sender_id = "<%=user._id %>";
      var receiver_id;
      var socket = io("/user-namespace", {
        auth: {
          token: "<%=user._id %>",
        },
      });
      function updateScroll(time) {
      var element = document.querySelector(".chatbox");
      setTimeout(() => {
        element.scrollTop = element.scrollHeight;
      }, time);
    }
      document.querySelector(".inbox").addEventListener("click", function (e) {
        updateScroll(500);
        var userId = e.target.getAttribute("data-id");
        console.log(userId);
        var userImg = e.target.getAttribute("image");
        var Name = e.target.getAttribute("Name");
        if(Name==null || userImg==null || userId==null){
          return;
        }
        receiver_id = userId;

        document.querySelector(".chatbox").style.display = "block";
        document.querySelector(".textbox").style.display = "block";
        socket.emit("existsChat", {
          sender_id: sender_id,
          receiver_id: receiver_id,
        });
       
        document.querySelector(".userleft").innerHTML = `
        <div class="profile siltu">
              <img src="${userImg}" alt="" />
            </div>
        <h3>${Name}</h3>`;
        
      });
      socket.on("getOnlineUser", function (data) {
        console.log(data);
        $(`#${data.user_id}-status`).html("Online");
        $(`#${data.user_id}-status`).removeClass("offline-status");
        $(`#${data.user_id}-status`).addClass("online-status");
      });
      socket.on("getOfflineUser", function (data) {
        console.log(data);
        $(`#${data.user_id}-status`).html("Offline");
        $(`#${data.user_id}-status`).removeClass("online-status");
        $(`#${data.user_id}-status`).addClass("offline-status");
      });

      $("#chat-form").submit(function (e) {
        e.preventDefault();
        var message = $("#text").val();
        $.ajax({
          url: "/save-chat",
          type: "POST",
          data: {
            sender_id: sender_id,
            receiver_id: receiver_id,
            message: message,
          },
          success: function (response) {
            if (response.success) {
              console.log(response);
              $("#text").val("");
              let chat = response.data.message;
              let html =
                `<div class="message rightbox"><h3>` + chat + `</h3></div>`;

              $(".chatbox").append(html);
              socket.emit("newChat", response.data);
              updateScroll(100);
            } else {
              alert(response.msg);
            }
          },
        });
      });

      socket.on("loadNewChat", function (data) {
        if (sender_id == data.receiver_id && receiver_id == data.sender_id) {
          let html =
            `<div class="message leftbox"><h3>` + data.message + `</h3></div>`;
          $(".chatbox").append(html);
          updateScroll(100);
        }

      });

      //load old chats
      socket.on("loadChats", function (data) {
        $(".chatbox").html("");
        var chats = data.chats;
        let html = "";
        chats.forEach((i) => {
          let addClass = "";
          if (i.sender_id == sender_id) {
            addClass = "rightbox";
          } else {
            addClass = "leftbox";
          }
          html += `<div class="message ${addClass}"><h3>${i.message}</h3></div>`;
        });
        $(".chatbox").append(html);
      });
    </script>
  </body>
</html>